<div class="container">
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<div class="page-deader">
				<h3><%= link_to @another_entry.user.name, user_path(@another_entry.user) %></h3>
			</div>

			<table>
				<thead>
					<tr>
						<th>送信者</th>
						<th>メッセージ</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @room.messages.each do |message| %>
					<tr>
						<td><%= link_to user_path(message.user) do %>
							  <%= message.user.name %>
							<% end %>
						</td>
						<td><%= message.body %></td>
						<td><% if message.user == current_user %>
							<%= link_to '削除', message, method: :delete, data: { confilm: '本当に削除しますか？'}, class: 'btn-sm btn-danger' %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3"></div>
	</div>
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<%= form_with model: @message, url: messages_path, local: true do |f| %>
			  <div class="col-xs-10">
			  	<%= f.text_field :body, class: 'form-control' %>
			  	<%= f.hidden_field :room_id, value: @room.id %>
			  </div>
			  <div class="col-xs-2">
			  	<%= f.submit '送信', class: 'btn btn-info btn-block' %>
			  </div>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>